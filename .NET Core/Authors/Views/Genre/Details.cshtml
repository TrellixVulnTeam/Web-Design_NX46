@model Authors.Models.Database.Genre

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div class="col-sm-5">
    <h4>Genre - @Html.DisplayFor(model => model.name)</h4>
    <hr/>
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.name)
        </dd>
        <dt class = "col-sm-2">
            Knjige
        </dt>
         <dd class = "col-sm-10">
            <ul>
                @foreach (Authors.Models.Database.Book book in ViewBag.books)
                {
                    <li>@book.name</li>
                }
            </ul>
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>

